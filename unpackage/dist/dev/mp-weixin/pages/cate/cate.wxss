/* 水平间距 */
.scroll-view-box {
  display: flex;
}
.scroll-view-box .left-scroll {
  width: 120px;
}
.scroll-view-box .left-scroll .left-scroll-item {
  background-color: #f7f7f7;
  line-height: 60px;
  text-align: center;
  font-size: 12px;
}
.scroll-view-box .left-scroll .left-scroll-item.active {
  background-color: #ffffff;
  position: relative;
}
.scroll-view-box .left-scroll .left-scroll-item.active::before {
  content: ' ';
  display: block;
  width: 3px;
  height: 30px;
  background-color: #c00000;
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.catelv2-title {
  font-size: 12px;
  font-weight: bold;
  text-align: center;
  padding: 15px 0;
}
.catelv3-list {
  display: flex;
  flex-wrap: wrap;
}
.catelv3-list .catelv3-item {
  width: 33.33%;
  margin-bottom: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.catelv3-list .catelv3-item image {
  width: 60px;
  height: 60px;
  border-radius: 10px;
}
.catelv3-list .catelv3-item text {
  font-size: 12px;
}

